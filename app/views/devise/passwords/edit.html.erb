<div class="container">

<div class="row">
  <div class="col-md-6 col-md-offset-6 mx-auto text-center">
    <div class="card text-left">
      <h2 class="card-header">パスワードを変更する</h2>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
        
          <div class="field">
            <%= f.label :password, "新しいパスワードを入力" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>
        
          <div class="field">
            <%= f.label :password_confirmation, "もう一度入力" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        
          <div class="actions">
            <br><%= f.submit "パスワードを変更する", class: "btn btn-primary btn-raised" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


</div>