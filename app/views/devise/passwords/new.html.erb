<div class="container">
  <!--PC-->
  <div class="d-none d-lg-block">
  <div class="row">
    <div class="col-md-6 col-md-offset-6 mx-auto text-center">
      <div class="card text-left">
        <h2 class="card-header">パスワードお忘れの場合</h2>
        <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="form-group">
            <%= f.label :email, class: "bmd-label-floating" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        
          <!--<div class="actions">-->
            <%= f.submit "送信する", class: "btn btn-primary btn-raised" %>
          <!--</div>-->
        <% end %>
        
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  </div>
  <!--スマホ-->
  <div class="d-lg-none">
  <div class="row">
    <div class="col-md-6 col-md-offset-6 mx-auto text-center mt-5 pt-5">
      <div class="card text-left">
        <h3 class="card-header">パスワードを変更する</h3>
        <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="form-group">
            <%= f.label :email, class: "bmd-label-floating" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        
          <!--<div class="actions">-->
            <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-raised" %>
          <!--</div>-->
        <% end %>
        
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>