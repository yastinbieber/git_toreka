<div class="container">
  <!--PC-->
  <div class="row">
    <div class="col-md-4 ml-auto mr-auto">
      <div class="card mx-auto text-left">
        <h4 class="card-header">ログイン</h4>
        <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group has-primary">
            <%= f.label :email, class: "bmd-label-floating" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group has-primary">
            <%= f.label :password, class: "bmd-label-floating" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %><br>
          </div>
            <%= f.submit "ログインする", class: "btn btn-primary btn-raised" %>
        <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>