<div class="container">
  <!--PC-->
  <div class="d-none d-lg-block">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 mx-auto text-center">
      <div class="card mx-auto text-left">
        <h2 class="card-header">ログイン</h2>
        <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group has-success">
            <%= f.label :email, class: "bmd-label-floating" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group has-success">
            <%= f.label :password, class: "bmd-label-floating" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %><br>
          </div>
          <% if devise_mapping.rememberable? %>
            <!--<div class="checkbox">-->
            <!--  <%= f.check_box :remember_me %>-->
            <!--  <%= f.label :remember_me %>-->
            <!--</div>-->
            <div class="checkbox has-success">
              <label>
                <input type="checkbox"> Remember me
              </label>
            </div>
          <% end %>
          <!--<div class="checkbox">-->
            <%= f.submit "ログインする", class: "btn btn-success btn-raised" %>
          <!--</div>-->
        <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
