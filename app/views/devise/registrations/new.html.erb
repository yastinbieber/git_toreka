                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                </div>
                <div class="form-group has-primary">
                  <%= f.label :パスワードをもう一度入力, class: "bmd-label-floating" %><br />
