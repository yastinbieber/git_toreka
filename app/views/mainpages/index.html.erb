				<%= link_to "無料で新規登録", plan_comparison_mainpages_path, class: "btn btn-primary btn-lg my-5" %>
			</div>
		</div>
	</section>
	<section class="second">
		<div class="container">
			<div class="col-md-8 col-md-offset-2 mx-auto text-center my-5">
