      <form>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label class="bmd-label-floating">Fooddiaryperiod／食事管理期間</label>
              <h5 class="form-control"><%= current_user.idealweight.period %>日</h5>
