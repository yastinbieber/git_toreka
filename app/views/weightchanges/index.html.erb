              </div>
              <div class="form-group col-md-12">
                <%= f.submit "検索", class: "btn btn-raised btn-default" %>
              </div>
            </div>
          <% end %>
          <table class="table mt-5">
            <thead class="thead-light">
              <tr>
                <th class="text-left"><small>測定日</small></th>
                <th class="text-right"><small>体重</small></th>
                <th class="text-right"><small>期待値</small></th>
