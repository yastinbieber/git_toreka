            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
          <script>
          var ctx = document.getElementById("myLineChart");
          var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: <%= @labels.to_json.html_safe %>,
              // labels: ["0701", "0702", "0703", "0704", "0705", "0706", "0707"],
              datasets: [
                {
                  label: '実績推移',
                  data: <%= @datas %>,
                  borderColor: "#0000ff",
                  backgroundColor: "rgba(0,0,0,0)"
                },
                 {
                  label: '期待値',
                  data: <%= @idealweight_datas %>,
                  borderColor: "rgba(255,0,0,1)",
                  backgroundColor: "rgba(0,0,0,0)"
                }
              ],
            },
            options: {
              title: {
                display: true,
                text: '体重推移 （<%= current_user.idealweight.start_day %> 〜 <%= current_user.idealweight.last_day %>）'
              },
              scales: {
                yAxes: [{
                  ticks: {
                    suggestedMax: <%= @max %> +3,
                    suggestedMin: <%= @minimum %> -3,
                    stepSize: 1,
                    callback: function(value, index, values){
                      return  value +  'KG'
                    }
                  }
                }]
              },
            }
          });
          </script>
          <!--本日の体重が入力されていない-->
          <% else %>
          <p>Nodate...</p>
          <% end %>
        </div>
        </div>
