<div class="container">
	<!--Navbar-->
  <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
    <div class="container-fluid">
      <div class="navbar-wrapper">
        <a class="navbar-brand" href="javascript:;">Planの確認</a>
      </div>
      <%= render 'users/users' %>
    </div>
  </nav>
  <div class="row">
  	<div class="col-md-12">
    	<div class="card" >
			  <div class="card-body">
			    <p class="card-text text-muted">現在のプラン</p>
			    <% if current_user.plan == 'pln_c97be8359fee9eecf65b59eeed35' %>
			      <h4 class="card-text">ベーシックプラン (¥480/month)</h4>
			    <% elsif current_user.plan == 'pln_572790307dd04b525bdd0a155347' %>
			      <h4 class="card-text">プレミアムプラン (¥980/month)</h4>
			    <% else %>
			      <h4 class="card-text">フリープラン (¥0/month)</h4>
			    <% end %>
